{
  "$id": "https://marl.github.io/jams-schema/0.4/namespaces/pitch/pitch_class.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema#",
  "title": "PitchClass",
  "$dynamicAnchor": "nsPitchClass",
  "definitions": {
    "valueDef": {
      "type": "object",
      "properties": {
        "tonic": {
          "type": "string",
          "pattern": "^[A-G][b#]?$"
        },
        "pitch": {
          "type": "integer"
        }
      },
      "required": [
        "tonic",
        "pitch"
      ]
    },
    "sparseData": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "$ref": "../SparseObservation.json"
          },
          {
            "properties": {
              "value": {
                "$ref": "#/definitions/valueDef"
              }
            },
            "required": [
              "value"
            ]
          }
        ]
      }
    },
    "denseData": {
      "allOf": [
        {
          "$ref": "../DenseObservation.json"
        },
        {
          "properties": {
            "value": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/valueDef"
              }
            }
          },
          "required": [
            "value"
          ]
        }
      ]
    }
  },
  "allOf": [
    {
      "$dynamicRef": "../jams.json#annotationBase"
    },
    {
      "type": "object",
      "properties": {
        "namespace": {
          "const": "pitch_class"
        }
      },
      "required": [
        "namespace"
      ]
    },
    {
      "properties": {
        "data": {
          "oneOf": [
            {
              "$ref": "#/definitions/sparseData"
            },
            {
              "$ref": "#/definitions/denseData"
            }
          ]
        }
      },
      "required": [
        "data"
      ]
    }
  ]
}