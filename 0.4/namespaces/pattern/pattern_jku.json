{
  "$id": "https://marl.github.io/jams-schema/0.4/namespaces/pattern_jku.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema#",
  "title": "PatternJku",
  "$dynamicAnchor": "nsPatternJku",
  "definitions": {
    "valueDef": {
      "type": "object",
      "properties": {
        "midi_pitch": {
          "type": "number"
        },
        "morph_pitch": {
          "type": "number"
        },
        "staff": {
          "type": "number"
        },
        "pattern_id": {
          "type": "number",
          "minimum": 1
        },
        "occurrence_id": {
          "type": "number",
          "minimum": 1
        }
      },
      "required": [
        "midi_pitch",
        "morph_pitch",
        "staff",
        "pattern_id",
        "occurrence_id"
      ]
    },
    "sparseData": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "$ref": "../SparseObservation.json"
          },
          {
            "properties": {
              "value": {
                "$ref": "#/definitions/valueDef"
              }
            },
            "required": [
              "value"
            ]
          }
        ]
      }
    },
    "denseData": {
      "allOf": [
        {
          "$ref": "../DenseObservation.json"
        },
        {
          "properties": {
            "value": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/valueDef"
              }
            }
          },
          "required": [
            "value"
          ]
        }
      ]
    }
  },
  "allOf": [
    {
      "$dynamicRef": "../jams.json#annotationBase"
    },
    {
      "type": "object",
      "properties": {
        "namespace": {
          "const": "pattern_jku"
        }
      },
      "required": [
        "namespace"
      ]
    },
    {
      "properties": {
        "data": {
          "oneOf": [
            {
              "$ref": "#/definitions/sparseData"
            },
            {
              "$ref": "#/definitions/denseData"
            }
          ]
        }
      },
      "required": [
        "data"
      ]
    }
  ]
}