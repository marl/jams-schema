{
  "$id": "https://marl.github.io/jams-schema/0.4/namespaces/misc/scaper.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema#",
  "title": "Scaper",
  "$dynamicAnchor": "nsScaper",
  "definitions": {
    "valueDef": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "source_file": {
          "type": "string"
        },
        "source_time": {
          "type": "number",
          "minimum": 0
        },
        "event_time": {
          "type": "number",
          "minimum": 0
        },
        "event_duration": {
          "type": "number",
          "minimum": 0,
          "exclusiveMinimum": true
        },
        "snr": {
          "type": "number"
        },
        "time_stretch": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "exclusiveMinimum": true
        },
        "pitch_shift": {
          "type": [
            "number",
            "null"
          ]
        },
        "role": {
          "enum": [
            "background",
            "foreground"
          ]
        }
      }
    },
    "sparseData": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "$ref": "../SparseObservation.json"
          },
          {
            "properties": {
              "value": {
                "$ref": "#/definitions/valueDef"
              }
            },
            "required": [
              "value"
            ]
          }
        ]
      }
    },
    "denseData": {
      "allOf": [
        {
          "$ref": "../DenseObservation.json"
        },
        {
          "properties": {
            "value": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/valueDef"
              }
            }
          },
          "required": [
            "value"
          ]
        }
      ]
    }
  },
  "allOf": [
    {
      "$dynamicRef": "../jams.json#annotationBase"
    },
    {
      "type": "object",
      "properties": {
        "namespace": {
          "const": "scaper"
        }
      },
      "required": [
        "namespace"
      ]
    },
    {
      "properties": {
        "data": {
          "oneOf": [
            {
              "$ref": "#/definitions/sparseData"
            },
            {
              "$ref": "#/definitions/denseData"
            }
          ]
        }
      },
      "required": [
        "data"
      ]
    }
  ]
}