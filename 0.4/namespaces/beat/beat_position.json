{
  "$id": "https://marl.github.io/jams-schema/0.4/namespaces/beat_position.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema#",
  "title": "BeatPosition",
  "$dynamicAnchor": "nsBeatPosition",
  "definitions": {
    "valueDef": {
      "type": "object",
      "properties": {
        "position": {
          "type": "number",
          "minimum": 1
        },
        "measure": {
          "type": "integer",
          "minimum": 0
        },
        "num_beats": {
          "type": "integer",
          "minimum": 1
        },
        "beat_units": {
          "enum": [
            1,
            2,
            4,
            8,
            16,
            32,
            64,
            128,
            256
          ]
        }
      },
      "required": [
        "position",
        "measure",
        "num_beats",
        "beat_units"
      ]
    },
    "sparseData": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "$ref": "../SparseObservation.json"
          },
          {
            "properties": {
              "value": {
                "$ref": "#/definitions/valueDef"
              }
            },
            "required": [
              "value"
            ]
          }
        ]
      }
    },
    "denseData": {
      "allOf": [
        {
          "$ref": "../DenseObservation.json"
        },
        {
          "properties": {
            "value": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/valueDef"
              }
            }
          },
          "required": [
            "value"
          ]
        }
      ]
    }
  },
  "allOf": [
    {
      "$dynamicRef": "../jams.json#annotationBase"
    },
    {
      "type": "object",
      "properties": {
        "namespace": {
          "const": "beat_position"
        }
      },
      "required": [
        "namespace"
      ]
    },
    {
      "properties": {
        "data": {
          "oneOf": [
            {
              "$ref": "#/definitions/sparseData"
            },
            {
              "$ref": "#/definitions/denseData"
            }
          ]
        }
      },
      "required": [
        "data"
      ]
    }
  ]
}